<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    tools:context="com.example.nirav.smartairport.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="center_horizontal">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/tv1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="40dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/img_icon"
            android:src="@drawable/user"
            android:layout_below="@+id/tv1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Email ID"
            android:layout_below="@+id/img_icon"
            android:id="@+id/txt_email_id"
            android:inputType="textEmailAddress"
            android:textSize="20dp"
            android:textAlignment="textStart"
            android:padding="15dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Password"
            android:id="@+id/txt_password"
            android:inputType="textPassword"
            android:layout_below="@+id/txt_email_id"
            android:textSize="20dp"
            android:textAlignment="textStart"
            android:padding="15dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_login"
            android:text="  Login  "
            android:width="180dp"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:paddingRight="15dp"
            android:paddingLeft="10dp"
            android:drawableRight="@drawable/login"
            android:textAlignment="textStart"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txt_password"
            android:background="#D7009688"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:layout_below="@+id/btn_login"
            android:layout_centerHorizontal="true"
            android:textStyle="italic"
            android:textSize="16dp"
            android:id="@+id/f_pass"
            android:linksClickable="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resend Verification Email"
            android:layout_below="@+id/f_pass"
            android:layout_centerHorizontal="true"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:textStyle="italic"
            android:id="@+id/resend_email"
            android:visibility="invisible"
            android:linksClickable="true"/>

    </RelativeLayout>

</RelativeLayout>

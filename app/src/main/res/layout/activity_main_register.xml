<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    tools:context="com.example.nirav.smartairport.Main_register">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/relativeLayout">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:id="@+id/tv1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="40dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/img_icon"
            android:src="@drawable/document"
            android:layout_below="@+id/tv1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Email ID"
            android:layout_below="@+id/img_icon"
            android:id="@+id/txt_email_id"
            android:inputType="textEmailAddress"
            android:textSize="20dp"
            android:textAlignment="textStart"
            android:padding="15dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Passport No"
            android:layout_below="@+id/txt_email_id"
            android:id="@+id/txt_passport_no"
            android:textSize="20dp"
            android:textAlignment="textStart"
            android:padding="15dp"
            android:maxLength="8"
            android:inputType="text"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Password"
            android:layout_below="@+id/txt_passport_no"
            android:id="@+id/txt_password"
            android:inputType="textPassword"
            android:textSize="20dp"
            android:textAlignment="textStart"
            android:padding="15dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Re-Type Password"
            android:layout_below="@+id/txt_password"
            android:id="@+id/txt_re_type_password"
            android:inputType="textPassword"
            android:textSize="20dp"
            android:textAlignment="textStart"
            android:padding="15dp"/>

    <!--    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lang"
            android:minHeight="50dp"
            android:textAlignment="textStart"
            android:layout_below="@+id/txt_re_type_password"
            android:entries="@array/lang_notification">
        </Spinner>
-->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_register"
            android:text="  Register  "
            android:width="180dp"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:paddingRight="15dp"
            android:paddingLeft="10dp"
            android:drawableRight="@drawable/add"
            android:textAlignment="textStart"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txt_re_type_password"
            android:background="#D7009688"
            />


    </RelativeLayout>

</RelativeLayout>
